<a class="appearance: none
      background-color: transparent
      border: 2px solid #1A1A1A
      border-radius: 15px
      box-sizing: border-box
      color: #3B3B3B
      cursor: pointer
      display: inline-block
      font-family: Roobert,
      font-size: 16px
      font-weight: 600
      line-height: normal
      margin: 0
      min-height: 60px
      min-width: 0
      outline: none
      padding: 16px 24px
      text-align: center
      text-decoration: none
      transition: all 300ms cubic-bezier(.23, 1, 0.32, 1)
      user-select: none
      -webkit-user-select: none
      touch-action: manipulation
      width: 100%
      will-change: transform"
>
    <slot name="before"/>
    <slot />
    <slot name="after"/>
</a>